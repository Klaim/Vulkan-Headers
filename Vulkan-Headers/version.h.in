#pragma once

/* The numeric version format is AAAAABBBBBCCCCCDDDE where:
 * 
 * AAAAA - major version number
 * BBBBB - minor version number
 * CCCCC - bugfix version number
 * DDD   - alpha / beta (DDD + 500) version number
 * E     - final (0) / snapshot (1)
 * 
 * When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
 * 
 * Version      AAAAABBBBBCCCCCDDDE
 * 
 * 0.1.0        0000000001000000000
 * 0.1.2        0000000001000020000
 * 1.2.3        0000100002000030000
 * 2.2.0-a.1    0000200001999990010
 * 3.0.0-b.2    0000299999999995020
 * 2.2.0-a.1.z  0000200001999990011
 */
#define VULKAN_HEADERS_VERSION       $Vulkan_Headers.version.project_number$ULL
#define VULKAN_HEADERS_VERSION_STR   "$Vulkan_Headers.version.project$"
#define VULKAN_HEADERS_VERSION_ID    "$Vulkan_Headers.version.project_id$"
#define VULKAN_HEADERS_VERSION_FULL  "$Vulkan_Headers.version$"

#define VULKAN_HEADERS_VERSION_MAJOR $Vulkan_Headers.version.major$
#define VULKAN_HEADERS_VERSION_MINOR $Vulkan_Headers.version.minor$
#define VULKAN_HEADERS_VERSION_PATCH $Vulkan_Headers.version.patch$

#define VULKAN_HEADERS_PRE_RELEASE   $Vulkan_Headers.version.pre_release$

#define VULKAN_HEADERS_SNAPSHOT_SN   $Vulkan_Headers.version.snapshot_sn$ULL
#define VULKAN_HEADERS_SNAPSHOT_ID   "$Vulkan_Headers.version.snapshot_id$"
